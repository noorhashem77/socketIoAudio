<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Intercom</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" href="/styles/main.css" />
  </head>
  <body>
    <header>
      <div class="user-controller">
        <p id="username-label"></p>
        <div id="username-div">
          <input type="text" id="username" />
          <button class="username-btn" id="change_username">
            Change username
          </button>
        </div>
      </div>

      <div class="controller mt-2">
        <button
          type="button"
          id="toggleMic"
          class="btn-sm btn btn-outline-primary m-1"
        >
          Open microphone
        </button>
        <button
          id="online"
          type="button"
          class="btn btn-sm btn-outline-danger m-1"
        >
          Go Offline
        </button>
      </div>
    </header>
    <div class="container text-center">
      <div class="row mt-5">
        <div class="col-sm-12 col-md-8">
          <h2>Rooms</h2>
          <hr />
          <div class="row row-cols-1 row-cols-md-2" id="rooms">
            <!-- rooms go here -->
          </div>
        </div>

        <div class="col-sm-12 col-md-4" id="groups">
          <h2>Groups</h2>
          <hr />
          <div class="row row-cols-1">
            <!-- Groups go here -->
            <div class="card mb-4">
              <div class="col mb-4">
                <div class="row g-0">
                  <div class="col-md-4 mt-2">Example Group 1</div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <p class="card-text">Room 1</p>
                      <p class="card-text">Room 2</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="card mb-4">
              <div class="col mb-4">
                <div class="row g-0">
                  <div class="col-md-4 mt-2">Example Group 2</div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <p class="card-text">Room 3</p>
                      <p class="card-text">Room 4</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/scripts.js"></script>
</html>
